{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "pagesNum": {
      "type": "integer",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "publisher": {
      "type": "string",
      "required": true
    },
    "language": {
      "type": "string",
      "required": true
    },
    "publicationYear": {
      "type": "date",
      "required": true
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "rate": {
      "type": "decimal",
      "required": true
    },
    "authorImg": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "discount": {
      "type": "decimal",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Fantacy",
        "Thriller",
        "Mystery",
        "Horror",
        "Romance",
        "Cooking",
        "History",
        "Art",
        "Self-help",
        "Travel",
        "Business",
        "Health",
        "Comedy",
        "Sport",
        "Children",
        "Science"
      ],
      "required": true
    }
  }
}
